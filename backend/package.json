{
  "name": "microservice-reservation",
  "version": "1.0.0",
  "description": "Microservice de gestion de rÃ©servations",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test npm run reset-db && mocha tests/**/*.test.js --timeout 10000 --exit",
    "reset-db": "node scripts/reset-test-db.js",
    "test:watch": "NODE_ENV=test mocha tests/**/*.test.js --watch --timeout 10000",
    "test:cov": "NODE_ENV=test npm run reset-db && nyc mocha tests/**/*.test.js --timeout 10000 --exit",
    "migrate": "node database/migrate.js",
    "seed": "node database/seed.js",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "pg": "^8.15.6"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "chai-http": "^4.4.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "mocha": "^10.8.2",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0"
  },
  "nyc": {
    "all": true,
    "include": [
      "server.js",
      "controllers/**/*.js",
      "routes/**/*.js",
      "services/**/*.js"
    ],
    "exclude": [
      "tests/**/*.js",
      "node_modules/**/*"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "watermarks": {
      "lines": [80, 95],
      "functions": [80, 95],
      "branches": [80, 95],
      "statements": [80, 95]
    }
  }
}